<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"

    tools:context=".src.home.advertisement.ActivityAdvertisement">

    <ImageView
        android:id="@+id/advertisement_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ad_gahuna"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        >

    <TextView
        android:id="@+id/advertisement_nevershow"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
       android:layout_gravity="start"
        android:padding="20dp"
        android:background="@color/grey_100"
        android:text="다시 보지 않기"
        android:textSize="18dp"
        android:textColor="@color/grey_600"
        />

        <TextView
            android:id="@+id/advertisement_close"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:textColor="@color/grey_600"

            android:background="@color/grey_100"
            android:padding="20dp"
            android:textSize="18dp"
            android:text="닫기"
          />
    </LinearLayout>
</LinearLayout>